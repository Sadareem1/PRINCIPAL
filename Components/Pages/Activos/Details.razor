@page "/activos/{Id:int}"
@attribute [Authorize(Policy = "SoloLectura")]
@inject IActivosService ActivosService

<h1>Detalle de activo</h1>

@if (Modelo is null)
{
    <p>Cargando...</p>
}
else
{
    <dl>
        <dt>Código</dt>
        <dd>@Modelo.CodigoInventario</dd>
        <dt>Marca</dt>
        <dd>@Modelo.Marca</dd>
        <dt>Modelo</dt>
        <dd>@Modelo.Modelo</dd>
        <dt>Estado</dt>
        <dd>@Modelo.Estado</dd>
        <dt>Área</dt>
        <dd>@Modelo.Area?.Nombre</dd>
        <dt>Planta</dt>
        <dd>@Modelo.Planta?.Nombre</dd>
        <dt>Notas</dt>
        <dd>@Modelo.Notas</dd>
    </dl>
}

@code {
    [Parameter] public int Id { get; set; }

    private Activo? Modelo { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Modelo = await ActivosService.ObtenerPorIdAsync(Id);
    }
}
